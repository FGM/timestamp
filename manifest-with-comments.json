{
  // Required
  "name": "__MSG_extName__",
  "version": "1",
  
  // Recommended
  "description": "__MSG_extDescription__",
  "icons": { 
    "16": "images/ts16.png",
    "48": "images/ts48.png",
    "128": "images/ts128.png" 
  },  
  "default_locale": "en",
  
  // Extension type: (browser|page)_action, theme, app, or just no type
  "browser_action": {
    "default_icon": "images/ts16.png",
    "default_title": "__MSG_extDefaultTitle__"
    //"default_popup": "popup.html"
  },
    
  // Extra, used

  // @link http://code.google.com/chrome/extensions/background_pages.html
  "background_page": "background.html",
  
  // @link http://dvcs.w3.org/hg/content-security-policy/raw-file/tip/csp-specification.dev.html
  // "content_security_policy": "default-src 'self' ",
  "content_security_policy": "default-src * 'unsafe-inline'",

  "homepage_url": "http://blog.riff.org/",
  
  // @link http://code.google.com/chrome/extensions/manifest.html#incognito
  "incognito": "spanning", // or "split"
   
